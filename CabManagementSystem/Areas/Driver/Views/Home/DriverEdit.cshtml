@model DriverEditViewModel
@{
    ViewData["Title"] = "DriverEdit";
}

<h1>Driver Edit</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post">
                <div>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>



                <div>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>



                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>



                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>


            <div class="container">
                <div class="row">
                    <div class="d-grid mt-4">
                        <a class="btn btn-primary" asp-action="index" asp-controller="home" asp-area="driver">submit</a>
                                       
                   </div>
                    <div class="col-sm">
                        <br />
                        <a class="btn btn-success" asp-action="Delete" asp-controller="Home" asp-area="Account">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
