@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "ViewUsersAdmin";
}

<h1>All Registered Users</h1>

<br />
<br />
<center>
    <div class="table table-success table-striped">
        @if (Model.Any())
        {
            <table>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    
                </tr>

                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-info">
                No users were Registered.
            </div>
        }
    </div>
</center>