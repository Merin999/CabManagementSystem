<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CabManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CabManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CabManagementSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if(User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-action="/" asp-controller="Home" asp-area="Account" class="nav-link text-white">Profile</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="ViewUsersAdmin" asp-controller="Home" asp-area="Admin" class="nav-link text-white">View Users</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="ViewDriversAdmin" asp-controller="Home" asp-area="Admin" class="nav-link text-white">View Driver Details</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="ViewBookingsAdmin" asp-controller="Home" asp-area="Admin" class="nav-link text-white">View Bookings</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Logout" asp-controller="Home" asp-area="Account" class="nav-link text-white">Logout</a>
                                </li>
                            }
                            else if(User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a asp-action="Edit" asp-controller="Home" asp-area="Account" class="nav-link text-white">Profile</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Booking" asp-controller="Home" asp-area="Account" class="nav-link text-white">Book Your Cab</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Driver" asp-controller="Home" asp-area="Account" class="nav-link text-white">Available Cabs</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Booking" asp-controller="Home" asp-area="Account" class="nav-link text-white">Booking History</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Logout" asp-controller="Home" asp-area="Account" class="nav-link text-white">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                <a asp-action="DriverEdit" asp-controller="Home" asp-area="Driver" class="nav-link text-white">Profile</a>
                                </li>

                                @*<li class="nav-item">
                                    <a asp-action="/" asp-controller="Home" asp-area="Account" class="nav-link text-white">Add Your Cab</a>
                                </li>*@

                                <li class="nav-item">
                                    <a asp-action="UserConfirm" asp-controller="Home" asp-area="Driver" class="nav-link text-white">Confirm Bookings</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="/" asp-controller="Home" asp-area="Account" class="nav-link text-white">View Feedback</a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="Logout" asp-controller="Home" asp-area="Account" class="nav-link text-white">Logout</a>
                                </li>

                            }
                            
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="Login" asp-controller="Home" asp-area="Account" class="nav-link text-white">Login</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Register" asp-controller="Home" asp-area="Account" class="nav-link text-white">User Registeration</a>
                            </li>

                            <li class="nav-item">
                                <a asp-action="DriverRegister" asp-controller="Home" asp-area="Account" class="nav-link text-white">Driver Registeration</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CabManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
